{
  "name": "rbjs",
  "version": "0.0.0",
  "description": "Augment JavaScript arrays with Ruby array methods, using Proxies",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "lint": "eslint --ignore-pattern docs --ignore-pattern es5 '**/*.js'",
    "docs": "esdoc",
    "clean": "rm -rf dist",
    "build:methods": "babel --out-dir dist/methods methods",
    "build:main": "babel --out-dir dist index.js",
    "prebuild": "npm run clean",
    "build": "npm run build:methods && npm run build:main"
  },
  "keywords": [
    "arrays",
    "proxies",
    "ruby-arrrays"
  ],
  "author": "Arnelle Balane <arnellebalane@gmail.com> (https://arnellebalane.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnellebalane/rbjs.git"
  },
  "bugs": {
    "url": "https://github.com/arnellebalane/rbjs/issues"
  },
  "homepage": "https://github.com/arnellebalane/rbjs#readme",
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.3.1",
    "ava": "1.1.0",
    "babel-plugin-add-module-exports": "1.0.0",
    "esdoc": "1.1.0",
    "esdoc-inject-style-plugin": "1.0.0",
    "esdoc-standard-plugin": "1.0.0",
    "eslint": "5.12.1",
    "eslint-config-arnellebalane": "5.0.0",
    "esm": "3.1.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "mkdirp": "0.5.1",
    "rimraf": "2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint"
  }
}
